# Application Configuration
APP_NAME=HR-AI Recruitment Platform
VERSION=1.0.0
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/hr_ai_db
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# CORS Configuration
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000"]

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1

# --- Bright Data Scraping Credentials ---
BRIGHTDATA_USERNAME=your-brightdata-username
BRIGHTDATA_PASSWORD=your-brightdata-password
BRIGHTDATA_HOST=brd.superproxy.io:9222
AUTH=BRIGHTDATA_USERNAME:BRIGHTDATA_PASSWORD

# Voice Calling Services (Indian Providers - Cost Effective)
# Primary: Exotel (₹0.30-0.50/min)
EXOTEL_SID=your-exotel-sid
EXOTEL_API_KEY=your-exotel-api-key
EXOTEL_API_TOKEN=your-exotel-api-token
EXOTEL_PHONE_NUMBER=your-exotel-phone-number

# Alternative: Knowlarity (₹0.25-0.45/min)
KNOWLARITY_API_KEY=your-knowlarity-api-key
KNOWLARITY_PHONE_NUMBER=your-knowlarity-phone-number
KNOWLARITY_CALLER_ID=your-knowlarity-caller-id

# Alternative: Plivo (₹0.35-0.60/min)
PLIVO_AUTH_ID=your-plivo-auth-id
PLIVO_AUTH_TOKEN=your-plivo-auth-token
PLIVO_PHONE_NUMBER=your-plivo-phone-number

# Fallback: Twilio (₹2.50/min - International rates)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Services
# Gmail SMTP (Primary)
GMAIL_EMAIL=your-email@gmail.com
GMAIL_APP_PASSWORD=your-gmail-app-password

# Email Configuration
FROM_EMAIL=your-email@gmail.com
FROM_NAME=HR TEAM
REPLY_TO_EMAIL=your-email@gmail.com

# Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Microsoft 365 Integration (Optional - Disabled for now)
# MICROSOFT_CLIENT_ID=your-microsoft-client-id
# MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
# MICROSOFT_REDIRECT_URI=http://localhost:8000/auth/microsoft/callback

# File Storage
STORAGE_TYPE=local
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100

# India Specific Configuration
DEFAULT_TIMEZONE=Asia/Kolkata
DEFAULT_CURRENCY=INR

# URLs
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
